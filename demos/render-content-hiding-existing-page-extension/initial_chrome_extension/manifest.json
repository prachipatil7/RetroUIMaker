{
  "manifest_version": 3,
  "name": "DOM Toggle Extension",
  "version": "1.0.0",
  "description": "Toggle between original webpage content and a custom overlay",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["htmlGenerator.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["retro-theme.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "DOM Toggle Extension"
  }
}
