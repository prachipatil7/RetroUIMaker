{
  "manifest_version": 3,
  "name": "Retro UI Maker",
  "version": "1.0.0",
  "description": "Transform any webpage into retro-style UI",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "env.js",
        "llmIntegration.js",
        "llmPatch/index.js",
        "create_copy.js",
        "htmlGenerator.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["retro-theme.css", "templates/base_template.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_title": "Retro UI Maker",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}
